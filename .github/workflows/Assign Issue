name: Assign Issue
on:
  issues:
    types: [opened]
permissions:
  issues: write  
jobs:
  assign_issue:
    runs-on: ubuntu-latest
    steps:
    - name: Assign Issue
      uses: actions-ecosystem/action-assign@v2
      with:
        github-token: ${{ secrets.GITHUB_TOKEN }}
        assignees:  JoshMowrey
